{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017", "DOM"],
    "strict": true,
    "esModuleInterop": false,
    "allowJs": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["dist", "lib", "es", "node_modules"],
  "compileOnSave": false
}
